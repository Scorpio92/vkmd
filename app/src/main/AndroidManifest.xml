<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.scorpio92.vkmd">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/vkmd"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".View.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".View.MainActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".View.DownloadManagerActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".View.Settings"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".View.About"
            android:label="@string/app_name" >
        </activity>

        <service
            android:enabled="true"
            android:name=".Services.AudioService">
        </service>

        <service
            android:enabled="true"
            android:name=".Services.DownloadService">
        </service>

        <receiver android:name=".Receivers.AudioServiceNotificationReceiver">
            <intent-filter>
                <action android:name="ru.scorpio92.vkmd.Services.AudioService.PREV"/>
                <action android:name="ru.scorpio92.vkmd.Services.AudioService.PLAY_PAUSE"/>
                <action android:name="ru.scorpio92.vkmd.Services.AudioService.NEXT"/>
                <action android:name="ru.scorpio92.vkmd.Services.AudioService.STOP"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".Receivers.DownloadServiceNotificationReceiver">
            <intent-filter>
                <action android:name="ru.scorpio92.vkmd.Services.DownloadService.PLAY_PAUSE"/>
                <action android:name="ru.scorpio92.vkmd.Services.DownloadService.STOP"/>
                <action android:name="ru.scorpio92.vkmd.Services.DownloadService.RESCAN"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".Receivers.HeadsetPlugReceiver">
            <intent-filter>
                <action android:name="android.intent.action.HEADSET_PLUG"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".Receivers.LockScreenReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

    </application>
</manifest>